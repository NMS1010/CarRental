@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đăng ký";
}
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form class="user" method="post" action="register">
                            <div class="form-group row">
                                <input style="width:100%;" type="text" class="form-control form-control-user" id="exampleInputName"
                                       placeholder="Name" name="Name">
                            </div>
                            <div class="form-group row mt-3">
                                <input style="width:100%;" type="email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="Email Address" name="Email">
                            </div>
                            <div class="form-group row mt-3">
                                <input style="width:100%;" type="password" class="form-control form-control-user"
                                       id="exampleInputPassword" placeholder="Password" name="Password">
                            </div>
                            <p>@ViewData["Message"]</p>
                            <button type="submit" class="btn btn-primary btn-user btn-block mt-3 mb-3">
                                Register
                            </button>
                            <hr>
                        </form>
                        <hr>
                        @* <div class="text-center">
                            <a class="small" href="forgot-password.html">Forgot Password?</a>
                        </div> *@
                        <div class="text-center">
                            <a class="small" href="/auth/login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
