@using CarRental.Entities
@model List<PostVehicle>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center mt-5">

    <div class="xm-plain-box cat_goods">
        <div class="box-hd">
            <h2 class="title">Thuê xe tự lái</h2>
        </div>
        <div class="box-bd">
            <ul class="homeproduct mt-3">
                @foreach(var vehicle in Model)
                {
                    <li class=" mt-3">
                        <a href="/chi-tiet-xe/@vehicle.Id" title="@vehicle.VehicleName">
                            <img src="@vehicle.Image" width="160" height="160" alt="">
                            <h3>@vehicle.VehicleName</h3>
                            <strong>@vehicle.Price ₫</strong><div class="promotion clr"></div>
                        </a>
                    </li>
                }
                @if(Model.Count == 0)
                {
                    <p class="mt-5 mb-5 " style="font-size:25px;color:red;">Không có sản phẩm phù hợp đang được trưng bày!!!</p>
                }
            </ul>
        </div>
    </div>
</div>
